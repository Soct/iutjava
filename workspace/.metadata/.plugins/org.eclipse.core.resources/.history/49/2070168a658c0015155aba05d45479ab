package edu.iut.gui.widget.agenda;

import java.awt.GridLayout;
import java.util.ResourceBundle;

import javax.swing.JPanel;


import edu.iut.gui.widget.agenda.AgendaPanelFactory.ActiveView;
import edu.iut.app.ApplicationSession;

public class WeekPanel extends EventPanel {


	// Exercice 4
	public enum WeekDayNames {
		EMPTYDAY("",""),
		MONDAY(ApplicationSession.instance().getString("2"), ApplicationSession.instance().getString("9")),
		TUESDAY(ApplicationSession.instance().getString("3"), ApplicationSession.instance().getString("10")),
		WEDNESDAY(ApplicationSession.instance().getString("4"), ApplicationSession.instance().getString("11")),
		THURSDAY(ApplicationSession.instance().getString("5"), ApplicationSession.instance().getString("12")),
		FRIDAY(ApplicationSession.instance().getString("6"), ApplicationSession.instance().getString("13")),
		SATURDAY(ApplicationSession.instance().getString("7"), ApplicationSession.instance().getString("14")),
		SUNDAY(ApplicationSession.instance().getString("8"), ApplicationSession.instance().getString("15"));
		
		private String name;
		private String shortName;
		
		WeekDayNames(String name,String shortName) {
			this.name = name;
			this.shortName = shortName;
		}
		
		public String getShortName() {
			return shortName;
		}
		
		public String toString() {
			return name;
		}
	}
	
	public WeekPanel() {
		super(ActiveView.WEEK_VIEW);
		GridLayout daysOfWeekLayout = new GridLayout(1,7);		
		this.setLayout(daysOfWeekLayout);
		for (int di = 0;di<8;di++)	{
			this.add(new DayPanel(ActiveView.WEEK_VIEW,WeekDayNames.values()[di+1]));
		}
	}
}
